<AnchorPane prefHeight="205.0" prefWidth="391.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="login.controller.Controller">
   <children>
      <GridPane layoutX="91.0" layoutY="58.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER" prefHeight="14.0" prefWidth="100.0" text="ID" />
            <Label alignment="CENTER" prefHeight="14.0" prefWidth="100.0" text="Password" GridPane.rowIndex="1" />
            <TextField fx:id="fxId" alignment="TOP_LEFT" promptText="아이디 입력" GridPane.columnIndex="1" />
            <TextField fx:id="fxPwd" promptText="비밀번호 입력" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="2">
               <children>
                  <Button mnemonicParsing="false" onAction="#loginFunc" text="확인" />
                  <Button mnemonicParsing="false" onAction="#cancleFunc" text="취소" />
                  <Button mnemonicParsing="false" onAction="#registerFunc" text="회원가입" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
